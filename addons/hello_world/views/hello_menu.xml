<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Action -->
    <record id="action_hello_world" model="ir.actions.act_url">
        <field name="name">Hello World</field>
        <field name="url">/hello</field>
        <field name="target">self</field>
    </record>

    <!-- Menu Root -->
    <menuitem
        id="menu_hello_root"
        name="Hello World"
        sequence="10"
    />

    <!-- Menu Item -->
    <menuitem
        id="menu_hello_page"
        name="Open Hello Page"
        parent="menu_hello_root"
        action="action_hello_world"
    />

</odoo>
