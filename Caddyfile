{
    admin off
    auto_https off
}

:80 {
    request_body {
        max_size 100MB
    }

    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    reverse_proxy odoo:8069

    log {
        output stdout
        format console
    }
}
